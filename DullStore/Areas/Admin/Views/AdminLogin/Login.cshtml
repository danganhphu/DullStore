@model DullStore.Models.Account

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/Areas/Admin/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/vendor/metisMenu/metisMenu.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/dist/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
</head>
<body style="background-color: #CCD1D1">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Đăng nhập</h3>
                    </div>

                    <div class="panel-body">
                        @using (Html.BeginForm("LoginAction", "AdminLogin"))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.taikhoan, new { @class = "form-control", @placeholder = "Tài khoản", @autofocus = "autofocus" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.matkhau, new { @class = "form-control", @placeholder = "Mật khẩu", @type = "password" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(model => model.RememberMe)
                                        Ghi nhớ tôi
                                    </label>
                                </div>

                                <button type="submit" class="btn btn-lg btn-success btn-block">Đăng nhập</button>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Areas/Admin/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/metisMenu/metisMenu.min.js"></script>
    <script src="~/Areas/Admin/Content/dist/js/sb-admin-2.min.js"></script>
</body>
</html>