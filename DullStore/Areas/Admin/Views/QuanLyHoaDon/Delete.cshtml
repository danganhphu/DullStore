@model DullStore.Models.GioHang

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 style="color:red;"> Bạn có chắc chắn xóa hóa đơn này?</h4>
<table border="0" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <caption><b>THÔNG TIN CHI TIẾT</b></caption>
                <tr>

                    <td>Mã hóa đơn:</td>
                    <td>@Html.DisplayFor(model => model.ma)</td>
                </tr>
                <tr>
                    <td>Mã khách hàng:</td>
                    <td>@Html.DisplayFor(model => model.makhachhang)</td>
                </tr>
                <tr>
                    <td>Ngày đặt hàng:</td>
                    <td>@Html.DisplayFor(model => model.ngaydathang)</td>
                </tr>
                <tr>
                    <td>Ngày giao hàng:</td>
                    <td>
                        @Html.DisplayFor(model => model.ngaygiaohang)
                    </td>
                </tr>
                <tr>
                    <td>Tình trạng:</td>
                    <td>@Html.DisplayFor(model => model.tinhtranggiaohang)</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" style="margin-left:50px;">
        <input type="submit" value="Xóa" class="btn btn-default" /> |
        @Html.ActionLink("Quay lại", "ListHoaDon")
    </div>
}